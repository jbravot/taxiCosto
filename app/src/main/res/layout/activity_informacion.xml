    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jonathanbravo.taxicosto.Informacion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Según la ANT, el taxímetro marca $ 0,35 el arranque en horario diurno y $ 0,40 en horario nocturno; el km de recorrido diurno $ 0,26 y $ 0,30 en la noche. La carrera mínima diurna es de $ 1 y $ 1,10 en la noche. El horario nocturno es desde las 22:00 hasta las 05:00."
